{
  "extends": [
    "./node_modules/@hollowverse/common/eslint/base/.eslintrc.json",
    "./node_modules/@hollowverse/common/eslint/node/.eslintrc.json"
  ],
  "plugins": ["graphql"],
  "rules": {
    "graphql/template-strings": [
      "error",
      {
        "env": "literal",
        "validators": "all"
      }
    ],
    "graphql/no-deprecated-fields": [
      "error",
      {
        "env": "literal"
      }
    ],
    "graphql/capitalized-type-name": [
      "error",
      {
        "env": "literal"
      }
    ],
    "graphql/named-operations": [
      "error",
      {
        "env": "literal"
      }
    ]
  }
}
