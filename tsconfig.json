{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
  
    "strict": true,
    "noEmitOnError": true,
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "lib",
    "jsx": "preserve",
    "plugins": [],
    "baseUrl": ".",

    // Allow absolute imports from 'src' dir,
    // e.g. `import 'file';` instead of `'../../file';`
    // This also has to be set in `webpack.config.json`, check `resolve.modules`
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "functions/node_modules"
  ]
}
