{
  "extends": "./node_modules/@hollowverse/config/typescript/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "checkJs": false,
    // Allow absolute imports from 'src' dir,
    // e.g. `import 'file';` instead of `'../../file';`
    // This also has to be set in `webpack.config.json`, check `resolve.modules`
    "baseUrl": "."
  },
  "exclude": ["node_modules", "**/*.js", "src", "__tests__", "__mocks__"]
}
