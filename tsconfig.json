{
  "extends": "./node_modules/@hollowverse/common-config/tsconfig",
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "module": "esnext",
    "target": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "lib",
    "jsx": "preserve",
    "plugins": [],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "functions/node_modules"
  ]
}
