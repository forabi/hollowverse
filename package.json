{
  "name": "hollowverse",
  "version": "1.0.0",
  "description": "Hollowverse.com",
  "main": "index.js",
  "repository": "https://github.com/hollowverse/hollowverse.git",
  "scripts": {
    "client/dev": "DEBUG=build HOT=1 NODE_ENV=development webpack-dev-server --config client/webpack.config.js",
    "client/build": "NO_PERF_CHECKS=1 DEBUG=build NODE_ENV=production webpack --config client/webpack.config.js",
    "client/stats": "NO_PERF_CHECKS=1 NODE_ENV=production webpack --config client/webpack.config.js --json > stats.json",
    "server/express": "ts-node server/src/newServer.ts --project .",
    "proxy": "ts-node server/src/redirectionProxy.ts --project .",
    "test": "yarn client/build",
    "start": "run-p server/express proxy",
    "validate-file-names": "validate-file-names",
    "lint-staged": "lint-staged"
  },
  "license": "Unlicense",
  "homepage": "https://github.com/hollowverse/hollowverse#readme",
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "prettier --write --single-quote --trailing-comma all",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "**/**/*.{s,}css": [
      "stylelint --syntax scss",
      "prettier --write  --parser postcss --single-quote --trailing-comma all",
      "git add"
    ]
  },
  "pre-commit": [
    "validate-file-names",
    "lint-staged"
  ],
  "browserslist": [
    "last 5 Chrome versions",
    "last 5 Firefox versions",
    "last 2 versions",
    "IE >= 11",
    "not OperaMini all"
  ],
  "dependencies": {
    "@hollowverse/common": "https://github.com/hollowverse/common",
    "shelljs": "^0.7.8"
  },
  "devDependencies": {
    "@types/node": "^8.0.8",
    "@types/shelljs": "^0.7.2",
    "babel-eslint": "^7.2.3",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "lint-staged": "^4.0.3",
    "npm-run-all": "^4.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^1.0.0",
    "ts-node": "^3.2.0",
    "tslint": "^5.6.0",
    "tslint-config-prettier": "^1.3.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.4.2"
  },
  "engines": {
    "node": ">= 8.1"
  }
}
