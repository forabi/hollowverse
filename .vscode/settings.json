{
  "cSpell.words": [
    "Algolia",
    "Collapsable",
    "Deserialized",
    "Favicons",
    "Lifecycle",
    "Polyfill",
    "Polyfills",
    "Splunk",
    "Whitelisted",
    "algoliasearch",
    "classcat",
    "destructure",
    "hollowverse",
    "loggable",
    "loglevel",
    "middlewares",
    "onunhandledrejection",
    "promisify",
    "unhandledrejection",
    "webpagetest"
  ],
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "[json]": {
    "editor.formatOnSave": false
  },
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "files.associations": {
    ".gqlconfig": "javascript",
    ".stylelintrc": "json",
    "**/.babelrc": "jsonc",
    "**/.babelrc.json": "jsonc",
    "**/tsconfig.json": "jsonc",
    "**/.stylelintrc": "json",
    "**/tslint.json": "jsonc",
    "**/.eslintrc.json": "jsonc"
  },
  "files.exclude": {
    "**/node_modules/**": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.options": {
    "reportUnusedDisableDirectives": true
  },
  "eslint.validate": ["typescript", "typescriptreact"],
  "css.validate": false,
  "scss.validate": false
}
